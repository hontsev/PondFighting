<body class="hold-transition register-page">
<div class="register-box">
  <div class="register-logo">
    <a href="#"><b>池塘大战 - 登录</b></a>
  </div>
  <div class="register-box-body">
	<% if flash[:danger] %>
  <p class="box"><%= flash[:danger] %></p>
<%end %>
	
	<%= form_for(:account, url: account_login_path, method: :post, html: {role: 'form'}) do |f| %>
	  <div class="form-group has-feedback">
        <input type="text" name='uid' class="form-control" placeholder="登录名">
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input type="password" name='upw' class="form-control" placeholder="密码">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-3">
        </div>
        <!-- /.col -->
        <div class="col-xs-6">
          <button type="submit" class="btn btn-success btn-block btn-flat">登录</button>
        </div>
        <!-- /.col -->
      </div>
	   <div class="row" style="text-align:center;">
	   <br>
	   <%= link_to("新用户注册", account_regist_path) %>
			
      </div>

  
<% end %>
	

